@model MyEcommerce.Models.Review

@{
    ViewData["Title"] = "WriteReivew";
}

<h1>Write Reivew</h1>

<h4>Add Review Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="WriteReivew">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReviewDescription" class="control-label"></label>
                <textarea asp-for="ReviewDescription" class="form-control" rows="8"></textarea>
                <span asp-validation-for="ReviewDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewStars" class="control-label">Rate out of 5 Stars</label>
                <select asp-for="ReviewStars">
                    <option value="5">5</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="1">1</option>
                </select>
                <span asp-validation-for="ReviewStars" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ProductID" class="control-label"></label>
                <input asp-for="ProductID" class ="form-control" value="@ViewBag.ProductID" />
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

